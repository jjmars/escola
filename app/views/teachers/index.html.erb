<p id="notice"><%= notice %></p>

<h1>Professores</h1>

<%= link_to 'Cadastrar Professor', new_teacher_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>CPF</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.cpf %></td>
        <td><%= link_to 'Ver', teacher %></td>
        <td><%= link_to 'Atualizar', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Apagar', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
