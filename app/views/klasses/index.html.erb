<h1>Turmas</h1>

<%= link_to 'Cadastrar Turma', new_klass_path %>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @klasses.each do |klass| %>
      <tr>
        <td><%= klass.title %></td>
        <td><%= link_to 'Ver', klass %></td>
        <td><%= link_to 'Atualizar', edit_klass_path(klass) %></td>
        <td><%= link_to 'Apagar', klass, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
